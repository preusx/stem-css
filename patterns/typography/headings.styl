/* ========================================================================
 * Paragraphs
 * ======================================================================== */

@require 'base'
@require 'paragraphs'
@require 'helpers'


/**
 * Styles
 * ======================================================================== */

// Headings
h1,
h2,
h3,
h4,
h5,
h6
    /.{$typography_prefix}h,
    &
        @extends .{$typography_prefix}p

        display block

        font-weight: $font_weight.normal
        line-height $base_line_height_ratio
        text-rendering optimizeLegibility
        vertical-align baseline

        color inherit

    /.{$typography_prefix}h{$bem_es}secondary,
    & small
        font-size 65%
        font-weight normal

        opacity th_color(text, secondary)


for $i in ('1' '2' '3' '4' '5' '6')
    .{$typography_prefix}h{$bem_ms}{$i},
    h{$i}
        font-size: $font_size[$i]
        line-height $base_line_height_ratio



5,
6
    .{$typography_prefix}h{$bem_ms}&,
    h&
        @extends .{$typography_prefix}ucase

        font-weight: $font_weight.bold


// Headig classes
.{$typography_prefix}h{$bem_ms}
    for $size in ('mega' 'giant' 'big' 'headline' 'title' 'subhead' 'body' 'caption')
        &{$size}
            font-size: $font_size[$size]
            line-height $base_line_height_ratio

    &title
    &body
        font-weight: $font_weight.medium

    &caption
        @extends .{$typography_prefix}ucase