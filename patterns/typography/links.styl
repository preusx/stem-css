/* ========================================================================
 * Links
 * ======================================================================== */

@require 'base'

/**
 * Variables
 * ======================================================================== */

$typography_link_color = extend({
        link:    #265C83
        active:  #007BE6
        hover:   #7FDBFF
        visited: #265C83
    }, $typography_link_color)


/**
 * Styles
 * ======================================================================== */

.{$typography_prefix}link,
a
    font-family inherit
    text-decoration underline

    cursor pointer

    color: $typography_link_color.link
    transition-property color, text-decoration

    &:hover
        text-decoration none
        text-decoration-color transparent

        color: $typography_link_color.hover

    &:active
        color: $typography_link_color.active

    &:visited
        color: $typography_link_color.visited


.{$typography_prefix}link
    text-decoration none